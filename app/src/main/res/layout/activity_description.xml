<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="com.example.umang18oct.easydictionary21.DescriptionActivity">
    <TextView
        android:text="WORD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="#42f4b0"
        android:background="#e0c4fc"
        android:backgroundTint="#e892e2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/word"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f8ff3f" />

    <TextView
        android:text="MEANING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/word"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#42f4b0"
        android:background="#e892e2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meaning"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f8ff3f" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/antonyms"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f8ff3f" />

    <TextView
        android:text="SYNONYMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_below="@+id/meaning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textColor="#42f4b0"
        android:background="#e892e2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/synonyms"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f8ff3f" />

    <TextView
        android:text="ANTONYMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/synonyms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#42f4b0"
        android:textAllCaps="false"
        android:background="#e892e2" />

    <Button
        android:text="HISTORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:background="#42f4b0"
        android:textColorLink="#7f00ff"
        android:textColor="#7f00ff"
        android:layout_above="@+id/goback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <Button
        android:text="Search another word!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goback"
        android:fontFamily="sans-serif-medium"
        android:background="#42f4b0"
        android:textColor="#7f00ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
